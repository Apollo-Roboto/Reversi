{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"command": "dotnet",
			"type": "process",
			"args": ["build"],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Test",
			"command": "dotnet",
			"type": "process",
			"args": ["test"],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"./ReversiBot/ReversiBot.csproj"
			],
			"problemMatcher": "$msCompile"
		},
	]
}